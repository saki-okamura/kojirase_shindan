    <input type="hidden" id="follower" value="<%= @follower_point %>">
    <input type="hidden" id="apo" value="<%= @apo_point %>">
    <input type="hidden" id="numa" value="<%= @numa_point %>">
    <input type="hidden" id="spec" value="<%= @spec_point %>">
    <input type="hidden" id="desperate" value="<%= @desperate_point %>">

    <canvas id="kojiraseChart"></canvas>
    <script>
    var follower = document.getElementById('follower').value
    var apo = document.getElementById('apo').value
    var numa = document.getElementById('numa').value
    var spec = document.getElementById('spec').value
    var desperate = document.getElementById('desperate').value

    var ctx = document.getElementById("kojiraseChart");
    var kojiraseChart = new Chart(ctx, {
      //グラフの種類
      type: 'radar',
      //データの設定
      data: {
        //データ項目のラベル
        labels: [`有名度 ${follower}`, `アポ度 ${apo}`, `沼度 ${numa}`, `高望み度 ${spec}`, `生き遅れ度${desperate}`],
        //データセット
        datasets: [{
              //背景色
              backgroundColor: "rgba(185, 113, 233, 0.937)",
              pointBackgroundColor: "rgba(114, 5, 187, 0.937)",
              //結合点の枠線の色
              pointBorderColor: "rgba(114, 5, 187, 0.937)",
              borderColor: "rgba(114, 5, 187, 0.937)",
              borderWidth: 2,
              //グラフのデータ
              data: [follower, apo, numa, spec, desperate]
            }
          ]
      },
        options: {
        // レスポンシブ指定
        responsive: true,
        // タイトルについて
        legend: {
          display: false
        },
        scale: {
          // グリッド線の設定
          gridLines: {
            color: 'white',
            lineWidth: 5,
          },
          // 点ラベルの設定
          pointLabels: {
            fontSize: 30,
            fontColor: 'white',
          },
          ticks: {
            fontColor: 'black',
            display: false,
            min: 0,
            max: 5,
            stepSize: 5
          },
          angleLines: {
            display: true,
            color: "grey",
            lineWidth: 1.5
          }
        }
      }
    });
    </script>
